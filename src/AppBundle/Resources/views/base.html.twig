<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <!-- Latest compiled and minified CSS -->
        <link href='https://fonts.googleapis.com/css?family=Miss+Fajardose|Quicksand' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

        <!-- Optional theme -->
        <!--link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css"-->

        <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}" />
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <script src="http://code.jquery.com/jquery-2.1.4.min.js"></script>
</head>
<body role="document">

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('homepage') }}"><span class="glyphicon glyphicon-lamp" aria-hidden="true"></span> BlaBlaFoundry</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="{{ menu_hp | default('')}}"><a href="{{ path('homepage') }}">Home</a></li>
                    <li class="{{ menu_start | default('')}}"><a href="{{ path('projectPublish') }}">Start a project</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <form class="navbar-form navbar-left" role="search" method="GET" action="{{ path('search') }}">
                            <div class="form-group">
                                <input type="text" name="s" class="form-control" placeholder="Search">
                            </div>
                            <button type="submit" class="btn btn-default">Search</button>
                        </form>
                    </li>
                    <li class="dropdown">
                        {% if app.user %}
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Me <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <p class="navbar-text">{{ app.user.nickname }}</p>
                            <li role="separator" class="divider"></li>
                            <li class="{{ menu_myprofile | default('')}}"><a href="{{ path('userIndex') }}">My Profile</a></li>
                            <li role="separator" class="divider"></li>
                            <li class="{{ menu_myprojects | default('')}}"><a href="{{ path('projectList') }}">My projects</a></li>
                            <li class="{{ menu_start | default('')}}"><a href="{{ path('projectPublish') }}">Start a project</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="{{ path('logout') }}">Logout</a></li>
                        </ul>
                        {% else %}
                            <a href="{{ hwi_oauth_login_url('google') }}">Sign-in</a>
                        {% endif %}
                    </li>
                    {% if app.user %}
                        <li><a href="{{ path('userIndex') }}" class="img-link"><img src="{{ app.user.profilePicture }}" alt="{{ app.user.nickname }}" class="img-navbar"/></a></li>
                    {% endif %}
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

{% block jumbotron %}{% endblock %}

{% block flash %}{{ include('AppBundle::flash.html.twig', {'close': true}) }}{% endblock %}
<div class="container theme-showcase" role="main">
    {% block body %}{% endblock %}
    {% block javascripts %}{% endblock %}
</div>

<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-lg-2">
              <!-- img src="{{ asset('assets/images/noneshallpass.png') }}" alt="None shall pass" width="150px" /-->
            </div>
            <div class="col-lg-8">
                <!-- None shall pass! It is the end of the page. -->
            </div>
            <div class="col-lg-2 footer-sillywalk">
                <img src="{{ asset('assets/images/silly-walk.gif') }}" alt="None shall pass" width="100px" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 small text-center">
        </div>
    </div>
</footer>
<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</body>
</html>
