{% extends 'AppBundle::base.html.twig' %}

{% block jumbotron %}
{% endblock %}

{% block body %}


    <div class="page-header">
        <h1>Families</h1>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <tbody>
                    <thead>
                        <tr>
                            <td>Family</td>
                            <td>Projects in the family</td>
                            <td> </td>
                            <td> </td>
                        </tr>
                    </thead>
                {% for family in families %}
                    <tr {% if not family.active %}class="inactive"{% endif %}>
                        <td><a href="{{ path('familySearch', {familyName: family.name}) }}">{{ family.name }}</a>
                            {% if not family.active %}
                            <span class="label label-warning">Family Stopped</span>
                            {% endif %}
                        </td>
                        <td><a href="{{ path('familySearch', {familyName: family.name}) }}">{{ family.nbProjects }} Projects</a></td>
                        <td>
                             <a href="{{ path('projectPublish', {family_id: family.id}) }}" class="btn btn-success {% if not family.active %}disabled{% endif %}">Start your new project</a>
                        </td>
                        <td>
                            {% if user.id == family.user_id %}
                                 <a href="{{ path('enableFamily', {id: family.id, enable: 1 - family.active }) }}" class="btn btn-default">{% if family.active %}Click to stop{% else %}Click to active{% endif %}</a>
                            {% endif %}
                        </td>
                    </tr> 
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="">
        <a href="{{ path('familyPublish') }}" class="btn btn-xs btn-default">Create a new family</a>
    </div>

    <span class="clearfix"></span>
    <hr />

    {% if projects|length %}
    <div class="page-header">
        <h1>Hot Projects</h1>
    </div>
        {% for project in projects %}
            {% include 'AppBundle:Project:_oneProjectCard.html.twig' %}
        {% endfor %}

        <span class="clearfix"></span>
        <hr />
    {% endif %}


    {% if old_projects|length %}

        <h2>Oldest Projects</h2>

        {% for project in old_projects %}
            {% include 'AppBundle:Project:_oneProjectCard.html.twig' %}
        {% endfor %}

    {% endif %}

{% endblock %}

{% block javascripts %}

    <script>
        $('.projectCard').on('click', function (e) {
            document.location = $(this).data('url');
        });
    </script>

{% endblock %}
