{% endblock %}

{% block body %}


    <div class="page-header">
        <h1>BlaBlaFoundry Families</h1>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <tbody>
                {% for family in families %}
                    <tr {% if not family.active %}class="inactive"{% endif %}>
                    {% if family.active %}
                        <td><a href="{{ path('familySearch', {familyName: family.name}) }}">{{ family.name }}</a>
                        </td>
                        <td><a href="{{ path('familySearch', {familyName: family.name}) }}">{{ family.nbProjects }} Projects</a></td>
                        <td><a href="{{ path('familySearch', {familyName: family.name}) }}">Owner : {{ family.username }}</a></td>
                    {% else %}
                        <td>{{ family.name }}
                            {% if not family.active %}
                            <span class="label label-warning">Project Stopped</span>
                            {% endif %}
                        </td>
                        <td>{{ family.nbProjects }} Projects</i></td>
                        <td>Owner : {{ family.username }}</td>
                    {% endif %}
                        <td>
                            {% if user.id == family.user_id %}
                                 <a href="{{ path('enableFamily', {id: family.id, enable: 1 - family.active }) }}" class="btn btn-xs btn-default">{% if family.active %}Click to inactive the family{% else %}Click to active the family{% endif %}</a>
                            {% endif %}
                        </td>
                    </tr> 
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="">
        <a href="#" class="btn btn-success">Start a new family [TODO]</a>
    </div>

    <span class="clearfix"></span>
    <hr />

    {% if projects|length %}
    <div class="page-header">
        <h1>Hot Projects</h1>
    </div>
        {% for project in projects %}
            {% include 'AppBundle:Project:_oneProjectCard.html.twig' %}
        {% endfor %}

        <span class="clearfix"></span>
        <hr />
    {% endif %}


    {% if old_projects|length %}

        <h2>Oldest Projects</h2>

        {% for project in old_projects %}
            {% include 'AppBundle:Project:_oneProjectCard.html.twig' %}
        {% endfor %}

    {% endif %}

{% endblock %}

{% block javascripts %}

    <script>
        $('.projectCard').on('click', function (e) {
            document.location = $(this).data('url');
        });
    </script>

{% endblock %}
