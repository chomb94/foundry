{% extends 'AppBundle::base.html.twig' %}

{% block jumbotron %}
<div class="jumbotron">
  <p>Welcome {{ user.nickname | default("to you") }}</p>
  <a class="btn btn-lg btn-success" href="{{ path('projectPublish') }}">Start your project</a>
</div>

{% endblock %}

{% block body %}

<div class="page-header">
	<h1>Hot Projects</h1>
</div>

{% for project in projects %}
  {% include 'AppBundle:Project:_oneProjectCard.html.twig' with { 'active' : '1'} %}
{% endfor %}

<span class="clearfix"></span>
<hr />
<h2>Oldest Projects</h2>

{% for project in old_projects %}
  {% include 'AppBundle:Project:_oneProjectCard.html.twig' with { 'active' : '0'} %}
{% endfor %}

{% endblock %}

{% block javascripts %}

<script>
	$('.projectCard').on('click', function(e) {
		document.location = $(this).data('url');
	});
</script>

{% endblock %}
