{% extends 'AppBundle::base.html.twig' %}

{% block body %}
{% include 'AppBundle:Family:familyHeader.html.twig' %}

<h2>Votes</h2>

{% if projects | length == 0 %}
	<div>No projects found</div>
{% endif %}

<div class="row">
    <div class="col-md-8">
        <table class="nogap table table-striped table-hover">
			<tbody>
			<thead>
				<tr>
					<td>Project</td>
					<td>Owner</td>
					<td>Votes</td>
				</tr>
			</thead>
			</tbody>
		</thead>

		{% for project in projects %}
			<tr class="lovelyrow">
				<td><a href="{{ path('projectView', {id: project.id}) }}">{{ project.title }}</a></td>
				<td>{{ project.nickname }}</td>
				<td data-toggle="tooltip" data-placement="right" data-html="true" title="{{ project.voters }}">{{ project.votes }} <span class="glyphicon glyphicon-heart btn-heart-active"></span></td>
			</tr>
		{% endfor %}
		</table>
	</div>
</div>

{% endblock %}