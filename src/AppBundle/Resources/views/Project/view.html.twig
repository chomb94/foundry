{% extends 'AppBundle::base.html.twig' %}
{% import 'AppBundle::macros.html.twig' as macros %}

{% block title %}
{{ project.title|e }}
{% endblock %}

{% block body %}
<div class="page-header">
  <h1>{{ project.title|e }}</h1>
  <p>By {{ project.user.nickname }}
  </p>
  {% if myproject %}
  <p>It's my project :
  <a class="btn btn-sm btn-default" href="{{ path('projectStepPublish', {id: project.id}) }}"><span class="glyphicon glyphicon-plus"></span> Add an Achievement</a>

  <a
      data-toggle="modal"
      data-target="#edit-project-{{ project.id }}"
      class="btn btn-sm btn-default"><span class="glyphicon glyphicon-edit"></span> Edit</a>

  <a
      href="{{ path('projectDelete', {id: project.id}) }}"
      class="btn btn-sm btn-danger"
      onclick="return confirm('Do you really want to DELETE the {{ project.title|e('html_attr') }} project?');">
      <span class="glyphicon glyphicon-trash"></span>
  </a>
   {% if project.getDaysToGo > 0 %}
     <a href="{{ path('enableProject', {id: project.id, enable: 1 - project.isActive }) }}" class="btn btn-sm btn-default"><span class="glyphicon glyphicon-{% if project.isActive %}pause{% else %}play{% endif %}"></span> {% if project.isActive %}Pause{% else %}Resume{% endif %}</a>
   {% endif %}
  </p>

  {% set body %}
      {{ render(controller('AppBundle:Project:edit', {id: project.id})) }}
  {% endset %}

  {{
      macros.modal(
          'edit-project-' ~ project.id,
          'Edit project "' ~ project.title ~ '"',
          body
      )
  }}

  {% endif %}
</div>

<div class="row">
	<div class="col-md-8 project-container">
		<div>
    {% if project.imageName %}
      <div class="view-crop">
        <img width="100%" src="{{ asset(vich_uploader_asset(project, 'imageFile')) }}" alt="{{ project.title|e('html_attr') }}"/>
      </div>
    {% endif %}
		</div>
		<div class="project-container-text">
			<div class="Project-shortdescription">
				<p>
				  {{ project.shortDescription|e|nl2br }}
				</p>
			</div>

      {% if project.videoUrl != ""  and asset(vich_uploader_asset(project, 'imageFile')) %}
        <p>      <!-- 16:9 aspect ratio -->
          <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="{{ project.videoUrl|e('html_attr') }}"></iframe>
          </div>
        </p>
      {% endif %}

			{% if project.fullDescription != '' %}
      <hr>
          <p>
            {{ project.fullDescription|e|nl2br }}
          </p>
			{% endif %}

			{% if project.team != '' %}
  			<h3>People needed:</h3>
  			<p>
  			  {{ project.team|e|nl2br }}
  			</p>
			{% endif %}

			{% if project.risksChallenges != '' %}
                <h3>Risks and Challenges:</h3>
                <p>
                  {{ project.risksChallenges|e|nl2br }}
                </p>
			{% endif %}

			{% if project.deliveryPromise != '' %}
                <h3>DeliveryPromise:</h3>
                <p>
                  {{ project.deliveryPromise|e|nl2br }}
                </p>
			{% endif %}

      <hr>
      <p>
      Creation Date: {{ project.creationDate.date|date('Y-m-d H:i:s') }}
			</p>
		</div>
	</div>
	<div class="col-md-4">
		<div class="summary">
			<h2>Summary</h2>

      {% if family.name is defined %}
      <div class="label label-primary family-label-view">
            <a href="{{ path('familySearch', {familyName: project.family.name}) }}">{{ family.name|default }}</a>
            {% if project.category.name is defined %}
              > {{ project.category.name|e }}
            {% endif %}
      </div>
      {% endif %}

      {% set daysToGo = project.getDaysToGo %}
      {% if daysToGo < 0 %}
          {% set daysToGo = 0 %}
      {% endif %}

      <p>
        <span class="summary-days-label">Days to go: <span class="summary-days {% if daysToGo < 10 %}red{% endif %}">{{ daysToGo }}</span></span>
      </p>

      {% if not project.isActive %}
        <p><span class="label label-warning">Project Stopped</span></p>
      {% endif %}

      <div class="participants-frame">
        <span class="">Crew:</span>
        <div>
          <img src="{{ project.user.profilePicture }}" class="img-crew-master-big img-circle" data-toggle="tooltip" data-placement="top" title="{{project.user.nickname}}"/>
          {% if participants|length > 0 %}
            {% for participant in participants %}
              <img src="{{participant.user.profilePicture}}" alt="{{participant.user.nickname}}" class="img-project-main-participant img-circle" data-toggle="tooltip" data-placement="top" title="{{participant.user.nickname}}" />
            {% endfor %}
          {% endif %}
        </div>
      </div>

      <div class="row btn-footer-onecard">
      {% if project.isActive %}

        {{
            render(controller('AppBundle:Project:viewParticipateModal', {
                id: project.id
            }))
        }}

        <div class="col-md-6 opc-action-right" id="participate-{{ project.id }}">
            {{
                render(controller('AppBundle:Project:viewParticipate', {
                    id: project.id,
                    imInButton: true
                }))
            }}

        </div>
        {% if project.family.isActive|default or project.family.isActive is not defined %}
        {{
            render(controller('AppBundle:Project:viewParticipateModal', {
                id: project.id
            }))
        }}

        <div class="col-md-6 opc-action-right" id="vote-{{ project.id }}">
            {{
                render(controller('AppBundle:Project:viewVote', {
                    id: project.id
                }))
            }}
        </div>
        {% endif %}
      {% endif %}
      </div>
    </div> <!-- Summary -->


    {% if steps|length > 0 %}
		<div class="steps-sidebar">
		<h2>Achievements</h2>
		{% for step in steps %}

      <div class="one-step {% if step.isCompleted %}completed{% elseif step.isInProgress %}inprogress{% else %}tocomplete{% endif %}">
        <div class="step-title">
            <h3>{{ step.title }}</h3>
        </div>
        <div class="clearfix"></div>
        <p class="step-sidebar-description">{{ step.shortDescription|e }}</p>
        <div class="step-credits">
            {% if step.isCompleted %}
                <span class="glyphicon glyphicon-gift" aria-hidden="true"></span>
                Completed!
            {% elseif step.isInProgress %}
                <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                In Progress...
            {% else %}
                <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
                Coming next...
            {% endif %}
        </div>
        {% if myproject %}
        <div class="step-credits text-center">
          {% if step.isInProgress or step.isCompleted %}
          <a class="btn btn-xs btn-default" href="{{ path('stepSetStatus', {project_id: project.id, step_id: step.id, pourcent: 0}) }}"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span> Stop</a>
          {% endif %}
          {% if not step.isInProgress %}
          <a class="btn btn-xs btn-default" href="{{ path('stepSetStatus', {project_id: project.id, step_id: step.id, pourcent: 50}) }}"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span> In progress</a>
          {% endif %}
          {% if not step.isCompleted %}
          <a class="btn btn-xs btn-default" href="{{ path('stepSetStatus', {project_id: project.id, step_id: step.id, pourcent: 100}) }}"><span class="glyphicon glyphicon-gift" aria-hidden="true"></span> Done</a>
          {% endif %}
          <a
            href="{{ path('stepDelete', {project_id: project.id, step_id: step.id}) }}"
            class="btn btn-xs btn-danger"
            onclick="return confirm('Do you really want to DELETE the {{ step.title|e('html_attr') }} achievement?');">
            <span class="glyphicon glyphicon-trash"></span>
          </a>

        </div>
        {% endif %}
      </div>
      {% endfor %}

    </div>
    {% endif %}
    {% if myproject %}
    <div class="sidebar-footer text-center">
      <a href="{{ path('projectStepPublish', {id: project.id}) }}" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-plus"></span> Add an Achievement</a>
    </div>
    {% endif %}
  </div>
</div>

{% endblock %}
