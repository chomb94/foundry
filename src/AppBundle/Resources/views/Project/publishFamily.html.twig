{% extends 'AppBundle::base.html.twig' %}

{% block body %}

<h1>Your New Space:</h1>

<div class="row">
	<div class="col-md-8 project-container">
		<div class="project-container-text">

		{% form_theme form 'AppBundle::form_theme.html.twig' %}

		{{ form_start(form) }}
		{{ form_errors(form) }}

		{{ form_label(form.name) }}
		{{ form_widget(form.name, {help_text:"A powerful name for your family!"}) }}
		{{ form_errors(form.name) }}

		{{ form_label(form.description) }}
		{{ form_widget(form.description, {help_text:"Optionnal"}) }}
		{{ form_errors(form.description) }}

		{{ form_label(form.endDate) }}
		{{ form_widget(form.endDate, {help_text:"An indicative end date for projects into the family."}) }}
		{{ form_errors(form.endDate) }}

		{{ form_label(form.maxVotes) }}
		{{ form_widget(form.maxVotes, {help_text:"An indicative end date for projects into the family."}) }}
		{{ form_errors(form.maxVotes) }}

		{{ form_rest(form) }}

		{{ form_end(form) }}
		</div>
	</div>
</div>


{% endblock %}
