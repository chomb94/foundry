{% set body %}


    <form id="participate-modal-form-{{ id }}" action="{{ path('projectContribute', {id: id}) }}" method="post">
        <div class="">

        <p>Do you really want to contribute to this project and to be a part of this crew ?</p>

        <a
            href="#"
            id="project_save"
            data-endpoint="{{ path('projectContribute', {id: id}) }}"
            data-input="#participate-modal-form-{{ id }}"
            data-output="#participate-{{ id }}"
            data-lock="#participate-modal-form-{{ id }}"
            data-script-success=" $('#participate-modal-{{ id }}').modal('hide'); "
            name="step"
            class="btn-success btn domajax click">
            <span class="glyphicon glyphicon-wrench btn-sunglasses-invert" aria-hidden="true"></span> I'm in!
        </a>

        </div>
    </form>
{% endset %}

{% import 'AppBundle::macros.html.twig' as macros %}

{{
    macros.modal(
        'participate-modal-' ~ id,
        'You want to contribute?',
        body
    )
}}
