<div class="{% if readonly == false %}domajax click{% else %}hide{% endif %}" data-alias="#score-{{ id }}">
    <a
        class="btn btn-default"
        href="#"
        id="score-{{ id }}"
        data-endpoint="{{ path('projectVote', {id: id}) }}"
        data-input-attr="score"
        data-output="#vote-{{ id }}"
        data-script-before="if ($('#vote-icon-{{ id }}').hasClass('btn-heart-active')) { $('#vote-icon-{{ id }}').removeClass('btn-heart-active').addClass('btn-heart-inactive'); } else { $('#vote-icon-{{ id }}').removeClass('btn-heart-inactive').addClass('btn-heart-active'); };"
    >
        <span id="vote-icon-{{ id }}" class="glyphicon glyphicon-heart{{ vote ? '' : '-empty' }} btn-onecard btn-heart-active" aria-hidden="true"></span>
        <span class="btn-onecard-text">Vote</span>
    </a>

    {% if error|length %}
        <div class="red">{{ error }}</div>
    {% endif %}
    
</div>

