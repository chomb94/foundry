{% extends 'base.html.twig' %}

{% block body %}

<h1>Define your Steps</h1>

<div class="row">
	<div class="col-md-8 project-container">
		<div class="project-container-text">
		<h2>For {{ project_title }}</h2>
		<a href="/project/view/{{ project_id }}">Back to project</a>
		<hr/>

		{% for step in steps %}
		<p>
		<strong>{{ step.title }}</strong></p><br />
		{{ step.shortDescription|e }}</p>
		Price : <strong>{{ step.price }}</strong> Bitoniots</p>
		<a href="/user/step/{{ step.id }}/edit">Edit</a>
		<hr />
		{% endfor %}

		{% form_theme form 'form_theme.html.twig' %}

		{{ form_start(form) }}

		{{ form_errors(form) }}

		{{ form_label(form.title) }}
		{{ form_widget(form.title, {help_text:"toto toto tata"}) }}
		{{ form_errors(form.title) }}

		{{ form_label(form.shortDescription) }}
		{{ form_widget(form.shortDescription, {help_text:"toto toto tata"}) }}
		{{ form_errors(form.shortDescription) }}

		{{ form_label(form.endDate) }}
		{{ form_widget(form.endDate, {help_text:"toto totoaea rae tata"}) }}
		{{ form_errors(form.endDate) }}

		{{ form_rest(form) }}

		{{ form_end(form) }}
		</div>
	</div>
</div>

{% endblock %}
