<div class="col-sm-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title project_title_panel">{{ project.title|e }}</h3>
    </div>
    <div class="panel-body">
      <div class="crop">
        <a href="/project/view/{{ project.id }}">
          <img src="{{ vich_uploader_asset(project, 'imageFile') }}" alt="{{ project.title }}"/>
        </a>
      </div>
      <div class="cropdescription">
          <a href="/project/view/{{ project.id }}">{{ project.shortDescription|e }}</a>
      </div>
      <div class="progress">
        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="{{ project.percentageOfProgress }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ project.percentageOfProgress }}%">
          <span class="sr-only">{{ project.percentageOfProgress }}% Complete (success)</span>
        </div>
      </div>
      <div class="panel-footer">
        <p>XX <span class="text-light">ratings</span></p>
        <p>XX <span class="text-light">pledges</span> - XX <span class="text-light">Days remains</span></p>
      </div>
      <p>
      	<a class="btn btn-default" href="/project/view/{{ project.id }}" role="button">View details Â»</a>
      </p>
    </div>
  </div>
</div>